<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ms.taojin.permission.mapper.TsysRoleUserMapper">

	<!-- 结果Map -->
	<resultMap id="BaseResultMap" type="com.ms.taojin.permission.entity.TsysRoleUserEntity">
		<result property="id" jdbcType="INTEGER" column="id"/>
		<result property="userId" jdbcType="INTEGER" column="user_id"/>
		<result property="roleId" jdbcType="INTEGER" column="role_id"/>
	</resultMap>
	
	<!-- 查询列 -->
	<sql id="BaseColumnList">
		id,user_id,role_id
	</sql>
	
			
	<!--创建记录 -->
	<insert id="create" parameterType="com.ms.taojin.permission.entity.TsysRoleUserEntity">
		INSERT INTO t_sys_role_user
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id!=null">id,</if>
			<if test="userId!=null">user_id,</if>
			<if test="roleId!=null">role_id</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides="," >
			<if test="id!=null">#{id,jdbcType=INTEGER},</if>
			<if test="userId!=null">#{userId,jdbcType=INTEGER},</if>
			<if test="roleId!=null">#{roleId,jdbcType=INTEGER}</if>
		</trim>
	</insert>
	
	<!--批量创建记录 -->
	<insert id="batchSave" parameterType="java.util.List">
		INSERT INTO t_sys_role_user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			id,
			user_id,
			role_id
		</trim>
		VALUES
		<foreach collection="list" item="item" index="index" separator=",">
		(
			#{item.id,jdbcType=INTEGER},
			#{item.userId,jdbcType=INTEGER},
			#{item.roleId,jdbcType=INTEGER}
		)
		</foreach>
	</insert>
	
	<!-- 更新记录 -->
	<update id="update" parameterType="com.ms.taojin.permission.entity.TsysRoleUserEntity">
		UPDATE t_sys_role_user 
		<set>
			<if test="userId!=null">user_id = #{userId,jdbcType=INTEGER},</if>
			<if test="roleId!=null">role_id = #{roleId,jdbcType=INTEGER}</if>
		</set>
		<where> 
			id  = #{id,jdbcType=DECIMAL}
		</where>				
	</update>
	
	<!--批量更新记录 -->
	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" item="item" index="index" open="BEGIN" close=";END;" separator=";">
			UPDATE t_sys_role_user 
			<set>
				<if test="item.userId!=null">user_id = #{item.userId,jdbcType=INTEGER},</if>
				<if test="item.roleId!=null">role_id = #{item.roleId,jdbcType=INTEGER}</if>
			</set>
			<where> 
				id  = #{item.id,jdbcType=DECIMAL}
			</where>	
		</foreach>
	</update>	
	
	<!-- 按ID查询记录 -->
	<select id="queryById" parameterType="long" resultMap="BaseResultMap">
		SELECT <include refid="BaseColumnList" />
		FROM t_sys_role_user 
		WHERE id  = #{id,jdbcType=DECIMAL}	
	</select>
	
	<!-- 按Id删除 -->
	<delete id="deleteById" parameterType="long">
		DELETE FROM t_sys_role_user WHERE id  = #{id,jdbcType=DECIMAL}
	</delete>
	
	
	<!-- 按对象查询 -->
	<select id="queryByTsysRoleUser" parameterType="com.ms.taojin.permission.entity.TsysRoleUserEntity" resultMap="BaseResultMap">
		SELECT <include refid="BaseColumnList" />
		FROM t_sys_role_user 
		<where>
		1=1
			<if test="id!=null">AND id = #{id,jdbcType=INTEGER}</if>
			<if test="userId!=null">AND user_id = #{userId,jdbcType=INTEGER}</if>
			<if test="roleId!=null">AND role_id = #{roleId,jdbcType=INTEGER}</if>
		</where>
	</select>
	
	<!-- 分页部分 -->
	<sql id="pageSplit">
		<if test="pageSize > 0">
			limit ${pageNum} ,${pageSize}
		</if>
	</sql>
	<sql id="queryFrom">
		FROM t_sys_role_user
	</sql>
	<!-- 查询Where语句 -->
	<sql id="queryWhere">
		<where>
			1=1
			<if test="whereCondition!=null">
				<if test="whereCondition.id!=null">AND id like CONCAT('%',#{whereCondition.id,jdbcType=INTEGER},'%')</if>
				<if test="whereCondition.userId!=null">AND user_id like CONCAT('%',#{whereCondition.userId,jdbcType=INTEGER},'%')</if>
				<if test="whereCondition.roleId!=null">AND role_id like CONCAT('%',#{whereCondition.roleId,jdbcType=INTEGER},'%')</if>
			</if>
		</where>
	</sql>
	
	<!-- 分页查询 -->
	<select id="queryByPage" parameterType="com.ms.taojin.common.vo.ListVo.ListReqVO"
		resultMap="BaseResultMap">
		SELECT
		<include refid="BaseColumnList" />
		<include refid="queryFrom" />
		<include refid="queryWhere" />
		<choose>
			<when test="orderField==null">
				ORDER BY id
			</when>
			<otherwise>
				ORDER BY ${orderField}
			</otherwise>
		</choose>
		<include refid="pageSplit" />
	</select>


	<!-- 查询记录数 -->
	<select id="queryCount" resultType="int"
		parameterType="com.ms.taojin.common.vo.ListVo.ListReqVO">
		SELECT COUNT(1)
		<include refid="queryFrom" />
		<include refid="queryWhere" />
	</select>
	
	<select id="queryByUserId"  resultMap="BaseResultMap">
		SELECT <include refid="BaseColumnList" />
		FROM t_sys_role_user 
		WHERE user_id  = #{userId}	
	</select>
	
	<select id="queryByRoleId"  resultMap="BaseResultMap">
		SELECT <include refid="BaseColumnList" />
		FROM t_sys_role_user 
		WHERE role_id  = #{roleId}	
	</select>
	<select id="deleteByuserId">
		DELETE FROM t_sys_role_user WHERE user_id  = #{userId}	
	</select>
</mapper>

